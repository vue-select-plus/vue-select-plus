{
    "extends": "../../tsconfig.app.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.vue.tsbuildinfo",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@vue-select-plus/core": [
                "../core/src/index.ts"
            ]
        },
        "declaration": true,
        "emitDeclarationOnly": true,
        "noEmit": false
    },
    "references": [
        {
            "path": "../core"
        }
    ],
    "include": [
        "src/**/*"
    ]
}