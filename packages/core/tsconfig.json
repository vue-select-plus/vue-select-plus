{
    "extends": "../../tsconfig.app.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.core.tsbuildinfo",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "declaration": true,
        "emitDeclarationOnly": true,
        "noEmit": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/__tests__/*",
        "src/**/*.spec.ts"
    ]
}